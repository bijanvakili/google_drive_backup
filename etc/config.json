{
	"credentials" : 
	{
		"store" :
		{
			"path" : "var/credentials.store"
		},
		"account" : 
		{
			"client_id" : "528303764723-o89htckqfcbcbuj2qmm6s2d6i1gufd48.apps.googleusercontent.com",
			"client_secret" : "aDX6763dgqFCT8yloeMuGyO-" 
		} 
	},
	"backup" :
	{
		"include_trashed" : "false",
		"storage_path" : "var/download",
		"download_formats" : 
		{
			"application/vnd.google-apps.document": 
			{
				"content_type": "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
				"extension" : "docx"
			},
			"application/vnd.google-apps.spreadsheet" : 
			{
				"content_type" : "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
				"extension" : "xlsx"
			},
			"application/vnd.google-apps.drawing" :
			{
				"content_type" : "image/svg+xml",
				"extension" : "svg"
			},
			"application/vnd.google-apps.presentation" :
			{
				"content_type" : "application/vnd.openxmlformats-officedocument.presentationml.presentation",
				"extension" : "pptx"
			} 
		},
		"exclusions" :
		[
			"readings/*"
		]
	},
	"logging" : 
	{
    	"version": 1,
	    "formatters": 
	    {
	        "verbose": 
	        {
	            "format": "%(asctime)s module=%(module)s %(levelname)s:  %(message)s"
	        },
	        "message_only": 
	        {
	            "format": "%(message)s"
	        },
	        "level_and_message" :
	        {
	            "format": "%(levelname)s %(message)s"
	        }
	    },
	    "filters" : 
	    {
	        "info_and_lower" : 
	        {
	            "()": "drive_backup.LevelBelowFilter",
	            "max_level" : "INFO"
	        }
	    },
	    "handlers" : 
	    {
	        "file" : 
	        {
	            "level": "INFO",
	            "class": "logging.FileHandler",
	            "formatter": "verbose",
	            "filename": "var/log/google_drive_backup.log"
	        },
	        "console_stdout" : 
	        {
	            "level": "DEBUG",
	            "class": "logging.StreamHandler",
	            "filters": ["info_and_lower"],
	            "formatter": "message_only",
	            "stream" : "ext://sys.stdout"
	        },
	        "console_stderr" : 
	        {
	            "level": "WARNING",
	            "class": "logging.StreamHandler",
	            "formatter": "level_and_message",
	            "stream"  : "ext://sys.stderr"
	        },
	        "email_stderr" :
	        {
	        	"level": "WARNING",
	        	"class": "logging.handlers.SMTPHandler",
	        	"formatter": "level_and_message",
	        	"mailhost" : ["smtp.gmail.com", 587],
				"fromaddr": "root@quadbeast",
				"toaddrs" : ["bijan.vakili@gmail.com"],
	        	"subject": "Google Drive Backup Notification",
				"credentials" : ["YOUR_NAME", "YOUR_PASSWORD"],
				"secure": []
	        },	        
	        "null": 
	        {
	            "level": "DEBUG",
	            "class": "logging.NullHandler"
	        }                  
	    },
		"loggers" :
		{
			"drive_backup" :
			{
	            "handlers" : [ "file", "console_stdout", "console_stderr", "email_stderr" ],
	            "level": "INFO"
			},
			"oauth2client.util" :
			{
	            "handlers" : [ "file", "console_stdout", "console_stderr" ],
	            "level": "DEBUG"
			}
		}		
	}
}
